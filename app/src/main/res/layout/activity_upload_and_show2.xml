<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/showuploadactivity_edittext_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:hint="Date : "
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showuploadactivity_edittext_nameofartist"
        app:layout_constraintStart_toStartOf="@+id/showuploadactivity_edittext_nameofartist"
        app:layout_constraintTop_toBottomOf="@+id/showuploadactivity_edittext_nameofartist" />

    <EditText
        android:id="@+id/showuploadactivity_edittext_nameofartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name of Artist"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/showuploadactivity_edittext_date"
        app:layout_constraintEnd_toEndOf="@+id/showuploadactivity_edittext_nameofpainting"
        app:layout_constraintStart_toStartOf="@+id/showuploadactivity_edittext_nameofpainting"
        app:layout_constraintTop_toBottomOf="@+id/showuploadactivity_edittext_nameofpainting" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp"
        android:onClick="imageClick"
        app:layout_constraintBottom_toTopOf="@+id/showuploadactivity_edittext_nameofpainting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/showuploadactivity_edittext_nameofpainting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:hint="Enter Painting Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/showuploadactivity_edittext_nameofartist"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:onClick="saveButton"
        android:text="save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showuploadactivity_edittext_nameofpainting"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/showuploadactivity_edittext_nameofpainting" />
</androidx.constraintlayout.widget.ConstraintLayout>